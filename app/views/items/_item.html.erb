<li class="rvt-p-bottom-sm">
  <span class="rvt-badge <%= item_badge(item) %>">
    <%= item.item_status.status %>
  </span>
  <% if item.iucat_id %>
    <%= link_to(iucat_link(item), target: '_blank') do %>
      <i><%= item.title.to_s %></i> <%= fa_icon 'external-link' %>
    <% end %>,
  <% else %>
    <i><%= item.title.to_s %></i>,
  <% end %>
  <%= item.author.to_s %>
  (<%= item.publication_date.to_s %>).
  <% if current_user.admin? %>
    <span>
      <%= link_to 'Show', item %>
      | <%= link_to 'Tag', item_path(item, format: :pdf), target: 'blank' %>
      | <%= link_to 'Edit', edit_item_path(item) %>
    </span>
  <% end %>
</li>
