<p id="notice"><%= notice %></p>

<h1>Items</h1>
<div class="rvt-button-group">
  <%= link_to "All Items", items_path, class: status_class(nil) %>
  <%= link_to "Pending", items_path(status: 'Pending'), class: status_class('Pending') %>
  <%= link_to "Ordering", items_path(status: 'Ordering'), class: status_class('Ordering') %>
</div>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Author</th>
      <th>Publication date</th>
      <th>Status</th>
      <th>Edition</th>
      <th>Loan period</th>
      <th>Call number</th>
      <th>Note</th>
      <th>IUCAT</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.title %></td>
        <td><%= item.author %></td>
        <td><%= item.publication_date %></td>
        <td><%= ItemStatus.find(item.item_status_id).status %></td>
        <td><%= item.edition %></td>
        <td><%= LoanPeriod.find(item.loan_period_id).length %></td>
        <td><%= item.call_number %></td>
        <td><%= item.note %></td>
        <td>
          <% if item.iucat_id %>
          <%= link_to(item.iucat_id, iucat_link(item), target: '_blank') %>
          <% end %>
        </td>
        <td>
          <div class='rvt-button-segmented' role='group'>
          <%= link_to 'Show', item, class: 'rvt-button rvt-button--secondary rvt-button--small' %>
          <%= link_to 'Edit', edit_item_path(item), class: 'rvt-button rvt-button--secondary rvt-button--small' %>
          <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?'}, class: 'rvt-button rvt-button--secondary rvt-button--small'  %>
          </div>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%#= link_to 'New Item', new_item_path, class: 'rvt-button' %>

<br/><br/>

