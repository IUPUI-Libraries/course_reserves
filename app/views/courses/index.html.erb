<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Course number</th>
      <th>Instructor</th>
      <th>Instructor username</th>
      <th>Library</th>
      <th>Semester</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.course_number %></td>
        <td><%= course.instructor %></td>
        <td><%= course.instructor_username %></td>
        <td><%= course.library %></td>
        <td><%= course.semester.semester %></td>
        <td>
          <div class='rvt-button-segmented' role='group'>
          <%= link_to 'Show', course, class: 'rvt-button rvt-button--secondary rvt-button--small' %>
          <%= link_to 'Edit', edit_course_path(course), class: 'rvt-button rvt-button--secondary rvt-button--small' %>
          <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?'}, class: 'rvt-button rvt-button--secondary rvt-button--small'  %>
          </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, class: 'rvt-button' %>

<%== pagy_nav(@pagy) %>
