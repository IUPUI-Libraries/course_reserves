<div class="rvt-p-all-md">
  <h2>IUCAT Record</h2>
  <table class="rvt-table-compact">
    <caption class="sr-only">IUCAT Record Info</caption>
    <thead>
      <tr>
        <th>Field</th>
        <th>Value</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">
          Catalog ID
        </th>
        <td>
          <%=  wrap(@record.data['001']) %>
        </td>
      </tr>
      <tr>
        <th scope="row">
          Title
        </th>
        <td>
          <%= wrap(@record.data['245a']) %>
        </td>
      </tr>
      <tr>
        <th scope="row">
          Sub Title
        </th>
        <td>
          <%= wrap(@record.data['245b']) %>
        </td>
      </tr>
      <tr>
        <th scope="row">
          Author
        </th>
        <td>
          <%= wrap(@record.data['245c']) %>
        </td>
      </tr>
      <tr>
        <th scope="row">
          Publication Date
        </th>
        <td>
          <%= wrap(@record.data['260c']) %>
        </td>
      </tr>
      <tr>
        <th scope="row">
          Location
        </th>
        <td>
          <%= wrap(@record.data['999m']) %>
        </td>
      </tr>
      <tr>
        <th scope="row">
          Local Location
        </th>
        <td>
          <%= local(@record.data['999m']) %>
        </td>
      </tr>
      <tr>
        <th scope="row">
          Book on Demand
        </th>
        <td>
          <%= bod(@record.data['999n']) %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
