  <div class='rvt-p-all-sm'>
    <%= link_to "Add Course", new_course_path, class: 'rvt-button' %>
  </div>
  <div class='rvt-p-all-sm'>
    <%= link_to "List Courses", courses_path, class: 'rvt-button' %>
